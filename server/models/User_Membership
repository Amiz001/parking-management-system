const mongoose = require("mongoose");

const User_membershipSchema = new mongoose.Schema({
  userId: { type: mongoose.Schema.Types.ObjectId , 
    ref: "User", 
    required: true 
    },

  membershipId: { type: mongoose.Schema.Types.ObjectId, 
  ref: "MembershipPlan" 
  },

  vehicle_num: {
    type: String,
    required: true
  },

  startDate: { 
    type: Date, 
    default: Date.now 
  },

  endDate: { 
    type: Date 
  },

  status: { 
    type: String, 
    enum: ["active", "expired", "cancelled"], 
    default: "active" 
  }
  
});

module.exports = mongoose.model("User_membership", User_membershipSchema);
